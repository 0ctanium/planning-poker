{
  "plugins": ["@typescript-eslint", "jsx-a11y"],
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "error"
  },
  "ignorePatterns": ["node_modules/", ".next/"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
